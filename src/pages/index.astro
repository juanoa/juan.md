---
import Logo from "../components/logo.astro";
import SharpRightArrow from "../components/SharpRightArrow.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Juan Otálora";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="flex h-screen flex-col lg:flex-row">
    <!-- Left Panel -->
    <div
      class="hidden lg:flex flex-1 flex-col bg-black text-white relative overflow-hidden"
    >
      <div
        class="p-10 text-xs tracking-[2px] uppercase leading-[1.4] relative z-10"
      >
        Frontend<br />Design<br />Product
      </div>
      <!-- Spain Map -->
      <div
        class="absolute top-1/2 right-[-50%] -translate-y-2/5 w-[100%] -rotate-[355deg]"
      >
        <img src="/images/shape-spain.svg" alt="Spain" class="w-full h-auto" />
        <!-- Red pulsing dot -->
        <div class="absolute top-[11%] left-[9%] -rotate-[5deg]">
          <div class="relative">
            <span
              class="absolute right-[calc(100%+20px)] top-1/2 -translate-y-1/2 text-white text-sm whitespace-nowrap bg-white/10 backdrop-blur-sm px-3 py-2 rounded-lg border border-white/20"
              >Based in A Coruña, Spain</span
            >
            <div class="w-5 h-5 bg-red-500 rounded-full animate-pulse"></div>
            <div
              class="absolute top-0 left-0 w-5 h-5 bg-red-300 rounded-full animate-ping"
            >
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Panel -->
    <div class="flex-1 bg-[#f5f5f5] p-10 flex flex-col gap-20 justify-between">
      <div class="flex justify-between items-start">
        <Logo />
        <img
          src="/images/me.webp"
          alt="Juan Otalora"
          class="w-20 h-20 rounded-full object-cover hidden sm:block"
        />
      </div>

      <div class="flex flex-col">
        <div
          class="grid grid-cols-1 md:grid-cols-2 gap-x-10 gap-y-2.5 mb-10 pb-10 border-b border-[#ccc] text-sm uppercase tracking-wide"
        >
          <a
            href="https://github.com/juanoa"
            target="_blank"
            class="text-black no-underline font-medium">GitHub</a
          >
          <a
            href="mailto:juanoa.otalora@gmail.com"
            target="_blank"
            class="text-black no-underline font-medium"
            >juanoa.otalora@gmail.com</a
          >
          <a
            href="https://x.com/juanoa_"
            target="_blank"
            class="text-black no-underline font-medium">X (Twitter)</a
          >
          <a
            href="mailto:juan@mito.ai"
            target="_blank"
            class="text-black no-underline font-medium">juan@mito.ai</a
          >
          <a
            href="https://linkedin.com/in/juanoa"
            target="_blank"
            class="text-black no-underline font-medium">LinkedIn</a
          >
        </div>
        <div class="flex flex-col gap-8">
          <a
            href="/about"
            class="flex justify-between items-center pb-5 border-b border-[#ccc] no-underline text-black hover:opacity-80 transition-opacity"
          >
            <span class="text-[32px] lg:text-[48px] font-light">About</span>
            <SharpRightArrow class="w-12 h-12 lg:w-16 lg:h-16" />
          </a>
          <div
            class="flex justify-between items-center pb-5 border-b border-[#ccc]"
          >
            <span class="text-[32px] lg:text-[48px] font-light"
              >Frontend Handbook</span
            >
            <span class="text-[48px] lg:text-[72px] font-light">WIP</span>
          </div>
          <div
            class="flex justify-between items-center pb-5 border-b border-[#ccc]"
          >
            <span class="text-[32px] lg:text-[48px] font-light">Opinion</span>
            <span class="text-[48px] lg:text-[72px] font-light">WIP</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
