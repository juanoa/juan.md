---
import Header from "../components/Header.astro";
import "../styles/global.css";
const { pageTitle, showHeader } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
  </head>
  <body>
    {showHeader && <Header />}
    <div class={showHeader ? "content-with-header" : ""}>
      <slot />
    </div>
  </body>
</html>

<style>
  .content-with-header {
    padding-top: 200px;
  }
</style>
